  body
  
    include ../mixins/header_navigation.jade
  
    block content
    
    footer
      p.copyright Â© 2015 VacayKit.
        span  All rights reserved.
      nav.project
        a.project__link(href="/blog") Blog
        a.project__link(href="/about") About
        a.project__link.project__link_selected(href="/contact") Contact us
      nav.social
        a.fb(href="http://www.facebook.com/vacaykit")
        a.tw(href="http://twitter.com/vacaykit")
        //- a.gp(href="#")
        //- a.pi(href="#")
        a.yt(href="http://www.pinterest.com/vacaykit")
        
    .popup.subscribe-form-popup
      .popup__lightbox
      form.popup__panel.subscribe-form(action="/", method="post")
        h2.subscribe-form__title Get my Thailand packing list
        fieldset.subscribe-form__line
          input.subscribe-form__input(type="email", name="email", placeholder="Email", required="required")
          button.subscribe-form__submit(type="submit") Send
        fieldset.subscribe-form__line.checkbox
          input#subscribe-form__update.checkbox__input(type="checkbox", name="update")
          label.checkbox__label(for="subscribe-form__update") Subscribe me to VacayKit monthly update
        nav
          a.popup__close(href="#")

    .popup.subscribe-confirmation-popup
      .popup__lightbox
      .popup__panel.subscribe-confirmation
        h2.subscribe-confirmation__title Check your inbox
        p.subscribe-confirmation__message We've sent The Complete Packing List for Thailand to your Email. Please check Spam folder if you won't have received it in 5 minutes.
        nav.subscribe-confirmation__socials
          h3 Help us get famous
          .social-likes.social-likes_both
            .facebook(title="Share link on Facebook") Share
            .twitter(title="Share link on Twitter",  data-via="vacaykit") Tweet
            .pinterest(title="Share image on Pinterest", data-media="/images/header_bg_5.jpg") Pin
        nav
          a.popup__close(href="#")

    script(id="select-template", type="text/x-handlebars-template").
      <span class="select">
        <span class="select__current select__current_unchanged">Please select</span>
