@import "../helpers/*"

body > footer
  overflow hidden
  position absolute
  bottom 0
  right 0
  left 0
  background-color $cyan
  background-image url('../svg/logotype_footer.svg')
  background-position 30px 50%
  background-repeat no-repeat
  background-size 30px auto
  padding 0 50px 0 70px
  height 56px
  line-height 56px
  clearit()
  .copyright
    float left
    font-size 14px
    color $semi-grey
    white-space nowrap
  .project
    float left
    white-space nowrap
    &__link
      text-decoration none
      display inline-block
      color $grey
      font-size 16px
      margin 0 0 0 40px
      &:hover
        color $red
  .social
    float right
    white-space nowrap
    a
      vertical-align middle
      display inline-block
      width 35px
      height 18px
      margin 0 0 0 10px
      padding 17px 0 0
      border-radius 100%
      text-decoration none
      transition background-color .25s
      line-height 0
      text-align center
      &:active
        box-shadow inset 0 2px 0 0 $transparent-black
      &:first-child
        margin 0
      &:before
        icon()
        font-size 21px
        color $white
      &.fb
        background-color #3b5fa6
        &:before
          content "\e002"
        &:hover
          background-color #5580d5
        &:active
          background-color #2f5196
      &.tw
        background-color #47a6ed
        &:before
          content "\e005"
        &:hover
          background-color #71bff9
        &:active
          background-color #3692d6
      &.gp
        background-color #d24238
        &:before
          content "\e003"
        &:hover
          background-color #e76158
        &:active
          background-color #bc3027
      &.pi
        background-color #aa262a
        &:before
          content "\e004"
        &:hover
          background-color #c9393d
        &:active
          background-color #991c20
      &.yt
        background-color #e52c28
        &:before
          content "\e007"
        &:hover
          background-color #fa5451
        &:active
          background-color #ce221e

@media (max-width: $laptop)
  html > body > footer
    .copyright
      span
        display none


@media (max-width: 900px)
  html > body > footer
    background-image none
    padding 0 50px
    .copyright
      display none
    .project
      &__link:first-child
        margin 0

@media (max-width: 740px)
  html > body > footer
    padding 10px
    height 66px
    line-height 0
    text-align center
    .copyright
      display none
    .project
      dispay inline-block
      float none
      line-height 20px
      margin 0 0 10px
      &__link
        margin 0 0 0 25px
        &:first-child
          margin 0
    .social
      dispay inline-block
      float none
      line-height 35px
