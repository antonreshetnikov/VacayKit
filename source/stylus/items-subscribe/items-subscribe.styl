@import "../helpers/*"

.items-subscribe
  border-radius 8px
  background-color $green-gray
  background-image url('../svg/subscribe-confirmation.svg')
  background-position -28px -8px
  background-repeat no-repeat
  background-size 152px auto
  text-align center
  min-height 200px
  margin 30px 0 40px
  position relative
  &:after
    position absolute
    top -15px
    left 50%
    margin-left -30px
    width 60px
    height 16px
    background url("../svg/item-subscribe-tail.svg") 0px 0px no-repeat
    content "."
    overflow hidden
    text-indent -9999px
    font-size 0
    line-height 0
  &__line
    margin 0 0 20px
  &__input
    input()
    width 260px
    margin 0 10px 0 0
  &__submit
    green_button()
    background-image url('../svg/subscribe.svg')
    background-size 19px 19px
    background-position 23px 50%
  &__title
    padding 19px 0 20px
    font-size 32px
    line-height 39px
    font-weight bold
    color $grey

@media (max-width: $mobile)
  .items-subscribe
    margin 0 -15px
    border-radius 0
    padding 0 0 20px
    height auto
    min-height initial
    background-size 90px 90px
    box-shadow inset 0 1px 3px 0 $transparent-black-light
    &:after
      background-image url("../svg/item-subscribe-tail-small.svg")
      background-position 50% 0px
      height 20px
      top -10px
      margin 0 0 0 -20px
      width 40px
    &__title
      text-align center
      font-size 20px
      line-height 24px
      color $grey
      font-weight bold
    &__line
      display block
      &_email
        margin 0 61px 15px 15px
        position relative
      .checkbox__label
        display block
        margin 0 15px
        text-align left
    &__input
      border-radius 4px 0 0 4px
      width 100%
      margin 0
      box-sizing border-box
      height 45px
    &__submit
      position absolute
      right auto
      left 100%
      top 0
      width 46px
      border-radius 0 4px 4px 0
      margin 0
      font-size 0
      padding 0
      background-position 50% 50%
