@import "../helpers/*"

.items-subscribe
  border-radius 8px
  background-color $green-gray
  background-image url('../svg/subscribe-confirmation.svg')
  background-position -28px -8px
  background-repeat no-repeat
  background-size 152px auto
  text-align center
  min-height 200px
  margin 30px 0 40px
  position relative
  &:after
    position absolute
    top -16px
    left 50%
    margin-left -30px
    width 60px
    height 16px
    background url("../svg/item-subscribe-tail.svg") 0px 0px no-repeat
    content "."
    overflow hidden
    text-indent -9999px
    font-size 0
    line-height 0
  &__line
    margin 0 0 20px
  &__input
    input()
    width 260px
    margin 0 10px 0 0
  &__submit
    green_button()
    background-image url('../svg/subscribe.svg')
    background-size 19px 19px
    background-position 23px 50%
  &__title
    padding 19px 0 20px
    font-size 32px
    line-height 39px
    font-weight bold
    color $grey
