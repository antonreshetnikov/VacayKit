@import "../helpers/*"

.subscribe-confirmation
  width 580px
  height 310px
  background $green-gray url('../svg/mail.svg') 50% 0 no-repeat
  padding 103px 45px 30px
  text-align center

  &__title
    font-size 32px
    font-weight bold
    margin 0 0 10px
  &__message
    font-size 20px
    line-height 24px
    color $semi-grey
    margin 0 0 40px
  &__socials
    text-align left
    line-height 24px
    h3
      display inline-block
      margin 0 20px 0 0
      vertical-align middle
      font-size 16px
      line-height 19px
    img
      vertical-align middle

@media (max-width: 620px)
  html body .subscribe-confirmation
    width 280px
    height 275px
    padding 80px 15px 15px
    background-size 95px auto
    &__title
      font-size 24px
      line-height 29px
      font-weight normal
      color $grey
    &__message
      font-size 16px
      line-height 20px
      margin 0 0 10px
    &__socials
      display none
