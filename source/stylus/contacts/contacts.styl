@import "../helpers/*"

.contacts
  max-width 760px
  padding 30px 30px 0
  margin 0 auto 130px
  clearit()
  text-align center
  *
    pointer-events all
  &__title
    font-size 24px
    line-height 30px
    color $grey
    margin 0 0 8px
  p
    font-size 20px
    line-height 28px
    color $semi-grey
    margin 0 0 30px
  &__form
    width 580px
    margin 0 auto
    fieldset
      margin 0 0 20px
      font-size 0
    input
      input_grey()
      font-family 'Lato', sans-serif
      width 260px
      margin 0 0 0 20px
      &:first-child
        margin 0
    textarea
      textarea()
      width 560px
    button
      green_button()
      padding 0 35px 0 60px
      background-image url('../svg/subscribe.svg')
      background-position 33px 13px
      background-size 19px auto


@media (max-width: 640px)
  html>body .contacts
    padding 20px 15px 0
    &__title
      font-size 19px
      line-height 24px
      margin 0 0 6px
    p
      font-size 18px
      line-height 22px
      margin 0 0 20px
    &__form
      width auto
      fieldset
        margin 0
      button
        width 100%
      input,
      input:first-child
        width 100%
        margin 0 0 10px
        display block
      textarea
        width 100%
        margin 0 0 10px
