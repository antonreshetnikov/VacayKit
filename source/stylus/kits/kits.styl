@import "../helpers/*"

.kits
  float left
  margin 32px 30px 30px -38px
  clearit()
  transform translateZ(0)
  *
    pointer-events all
    -moz-user-select none
    -webkit-user-select none
    -ms-user-select none
    user-select none
  &_stick
    position fixed
    top 60px
    margin 0 0 0 -38px
  &__trigger
    cursor pointer
    display none
    border-style none
    border solid $transparent-border
    border-width 0 0 1px
    -webkit-appearance none
    -moz-appearance none
    appearance none
    background none
    padding 0
    margin 0
    width 100%
    box-shadow none
    box-sizing border-box
    height 45px
    background url('../svg/close-kits.svg') 50% 50% no-repeat
    &-input
      position absolute
      left -9999px
  &__available
    font-size 24px
    line-height 32px
    color $grey
    font-weight bold
    margin 0 0 11px 5px
  &__count
    font-size 14px
    vertical-align super
    font-weight normal
    margin 0 0 0 5px
    position relative
    top -2px
  &__menu
    position relative
    max-height 100vh
    max-height calc(100vh - 108px)
    width 285px
    overflow auto
    overflow-x hidden
    overflow-y auto
    padding 0 0 5px
    box-sizing border-box
    transform translateZ(0)
  &__kit-title
    font-size 18px
    line-height 22px
    color $grey
    margin 13px 0 0
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

  &__kit-elements
    font-size 14px
    line-height 22px
    color $semi-grey
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
  &__kit
    position relative
    text-decoration none
    display block
    padding 5px
    height 70px
    border-radius 10px
    &_warnig:after
      z-index 1
      content ""
      display block
      position absolute
      top 0
      left 57px
      width 22px
      height 22px
      background $pink url('../svg/warning.svg') 50% 50% no-repeat
      border-radius 100%
      border 2px solid #fff
    &:active:hover,
    &:active
      background-color darken($green-gray, 10%)
    &_active,
    &:hover
      background-color $green-gray
    &:before
      float left
      content ""
      width 70px
      height 70px
      display block
      border-radius 6px
      margin 0 15px 0 0
      background-size cover
      background-position 50% 50%
    &_beach:before
      background-color #ffee58
    &_vacination:before
      background-color #90a4ae
      background-image url("../svg/icons/vaccination.svg")
    &_walking:before
      background-color #ec407a
      background-image url("../svg/icons/city_walking.svg")
    &_diving:before
      background-color #ec407a
      background-image url("../svg/icons/scuba_diving.svg")
    &_aid:before
      background-color #ff7043
      background-image url("../svg/icons/first_aid.svg")
    &_snorkeling:before
      background-color #29b6f6
      background-image url("../svg/icons/snorkeling.svg")
    &_whales:before
      background-color #29b6f6
      background-image url("../svg/icons/whale_watching.svg")
    &_trekking:before
      background-color #66bb6a
      background-image url("../svg/icons/jungle_trekking.svg")
    &_safari:before
      background-color #66bb6a
      background-image url("../svg/icons/safari.svg")
    &_caving:before
      background-color #8d6e63
      background-image url("../svg/icons/caving.svg")
    &_surfing:before
      background-color #26c6da
    &_mountin-hiking:before
      background-color #26c6da
      background-image url("../svg/icons/mountain_hiking.svg")

@media (max-width: 1120px)
  .kits
    z-index 10
    position absolute
    left 0
    float none
    margin 31px 0 0
    background-color $white
    box-sizing border-box
    border 1px solid $transparent-border
    border-width 1px 1px 1px 0
    &_stick
      position fixed
      top 60px
      bottom 0
      margin 0
    &__trigger
      display block
      &-input
        &:checked + .kits__trigger
          background url('../svg/open-kits.svg') 50% 50% no-repeat
          & + .kits__menu
            width 90px
            .kits__kit
              &-title
                display none
              &-elements
                display none
    &__available
      display none
    &__kit
      padding 10px
      border-radius 0
      &-title
        width 144px
      &-elements
        width 144px
    &__menu
      width 249px
      padding 0
      max-height calc(100vh - 107px)


@media (max-width: 980px)
  .kits
    float none
    position absolute
    left 0
    right 0
    height auto
    margin 20px 0 0
    &_stick
      position fixed
      top 60px
      bottom auto
      left 0
      right 0
      margin 0
    &__trigger
      display block
      background-image url('../svg/unopen.svg')
      &-input
        &:checked + .kits__trigger
          background-image url('../svg/open.svg')
          & + .kits__menu
            width auto
            height 75px
            .kits__kit
              height 60px
    &__menu
      white-space nowrap
      font-size 0
      width auto
      height 112px
      margin 0 32px 0 0
      padding 0
      max-height initial
      overflow-x auto
      overflow-y hidden
    &__kit
      padding 8px 7px 7px 8px
      text-align center
      width 60px
      height 97px
      display inline-block
      &-title
        width 100%
        font-size 12px
        line-height 15px
        font-weight bold
      &-elements
        width 100%
        font-size 11px
        line-height 13px
      &:before
        width 60px
        height 60px
        margin 0 0 6px
    &__trigger
      position absolute
      top 0
      bottom 0
      right 0
      height 100%
      width 32px
      border-width 0 0 0 1px
