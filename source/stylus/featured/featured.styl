@import "../helpers/*"

.featured
  font-size 0
  max-width 1080px
  margin 30px auto 112px
  text-align center
  &__link
    position relative
    width 322px
    height 242px
    display block
    margin -1px 0 0 0
    overflow hidden
    transform translateZ(0) scale(1)
    &:after
      content ""
      display block
      position absolute
      width 324px
      height 244px
      top -2px
      left -2px
      right -2px
      bottom -2px
      background url("../svg/mask320x240.svg") 50% 50% no-repeat
      background-size 324px 244px
      z-index 1000
  &__title
    font-size 40px
    line-height 53px
    margin 0 0 20px
    color $grey
  &__photo
    display block
    width 100%
    will-change transform
    transition transform .5s ease-in-out
    transform scale(1)
  &__item
    width 320px
    height 240px
    display inline-block
    vertical-align top
    margin 0 20px 40px
    position relative
    border-radius 6px
    &:hover,
    &:focus
      .featured__photo
        transform scale(1.05)
  &__details
    text-align left
    position absolute
    bottom 10px
    left 10px
    right 10px
  &__kit-icon
    width 44px
    height 44px
    float left
    margin 0 10px 0 0
  &__kit-name
    margin -5px 0 0
    font-size 26px
    line-height 32px
    color $white
    white-space nowrap
    font-weight bold
  &__kit-count
    font-size 14px
    line-height 17px
    color $white
    white-space nowrap
    font-weight bold

@media (max-width: $laptop)
  html>body .featured
    &__title
      font-size 36px
      line-height 48px
    &__item
      width 280px
      height 210px
    &__link
      width 282px
      height 210px
      &:after
        width 284px
        height 214px
        background url("../svg/mask280x210.svg") 50% 50% no-repeat
        background-size 284px 214px
    &__kit-name
      margin-top 0
      font-size 20px
      line-height 24px

@media (max-width: 768px)
  html>body .featured
    margin 20px auto 160px
    &__title
      font-size 22px
      line-height 28px
    &__item
      width 340px
      height 255px
      margin 0 15px 30px
    &__link
      width 342px
      height 255px
      &:after
        width 344px
        height 259px
        background url("../svg/mask340x255.svg") 50% 50% no-repeat
        background-size 344px 259px
    &__kit-name
      margin-top -5px
      font-size 26px
      line-height 32px

@media (max-width: $mobile)
  html>body .featured
    margin 20px auto 160px
    &__item
      margin 0 15px 15px
      width 290px
      height 218px
    &__link
      width 292px
      height 218px
      &:after
        width 294px
        height 222px
        background url("../svg/mask290x218.svg") 50% 50% no-repeat
        background-size 294px 222px
    &__kit-name
      margin-top 0
      font-size 22px
      line-height 27px
