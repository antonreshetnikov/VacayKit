@import "../helpers/*"

.items
  max-width 760px
  margin auto
  counter-reset item
  *
    pointer-events all
  &__wrapper
    float right
    width 760px
    margin 0 -37px 0 0
    overflow hidden
  &__hide
    grey_button()
    font-size 18px
    width 100%
    margin 0 0 5px
    background-image url("../svg/closed.svg")
    background-position 24px 50%
    &_open
      background-image url("../svg/open.svg")
      background-position 21px 50%
      grey_button_hover()
      &.items__hide_last
        background-image url("../svg/closed-2.svg")

  &__header
    height 180px
    border-radius 8px
    background-color #FFEE58
    position relative
    margin 0 0 30px
    background-size cover
    &_beach
      color $white
      background-color #FFBF32
      background-image url("../images/activities/item_beaching.jpg")
    &_vacination
      background-color #90A4AE
      background-image url("../images/activities/item_vaccination.jpg")
      color $white
    &_walking
      background-color #703649
      background-image url("../images/activities/item_city_walking.jpg")
      color $white
    &_diving
      background-color #5FB3F8
      background-image url("../images/activities/item_scuba_diving.jpg")
      color $white
    &_aid
      background-color #FF7043
      background-image url("../images/activities/item_first_aid.jpg")
      color $white
    &_snorkeling
      background-color #29B6F6
      background-image url("../images/activities/item_snorkeling.jpg")
      color $white
    &_whales
      background-color #487BB4
      background-image url("../images/activities/item_whale_watching.jpg")
      color $white
    &_trekking
      background-color #66BB6A
      background-image url("../images/activities/item_jungle_trekking.jpg")
      color $white
    &_safari
      background-color #66bb6a
      background-image url("../images/activities/item_safari.jpg")
      color $white
    &_caving
      background-color #8d6e63
      background-image url("../images/activities/item_caving.jpg")
      color $white
    &_surfing
      background-color #487BB4
      background-image url("../images/activities/item_surfing.jpg")
      color $white
    &_mountin-hiking
      background-color #B19C9C
      background-image url("../images/activities/item_mountain_hiking.jpg")
      color $white
    &_komodo_dragon
      background-color #a5b471
      background-image url("../images/activities/item_komodo_dragon.jpg")
      color $white
    &_meeting_tribes
      background-color #ee8622
      background-image url("../images/activities/item_meeting_tribes.jpg")
      color $white
    &_elephant_trekking
      background-color #66bb6a
      background-image url("../images/activities/item_elephant_trekking.jpg")
      color $white
    &_rafting
      background-color #487BB4
      background-image url("../images/activities/item_rafting.jpg")
      color $white
    &_cycling
      background-color #66bb6a
      background-image url("../images/activities/item_cycling.jpg")
      color $white
    &_kitesurfing
      background-color #487BB4
      background-image url("../images/activities/item_kitesurfing.jpg")
      color $white

  &__title
    font-size 44px
    line-height 52px
    font-weight bold
    color inherit
    left 24px
    bottom 15px
    position absolute
    white-space nowrap
  &__count
    position absolute
    left 100%
    bottom 31px
    color inherit
    font-size 18px
    line-height 22px
    white-space nowrap
    margin 0 0 0 8px
  &__abstract
    margin 0 0 30px
    p
      margin 10px 0
      font-size 18px
      line-height 25px
      color $grey


@media (max-width: $mobile)
  html body .items
    max-width initial
    &__count
      font-size 15px
      font-weight normal
    &__title
      font-size 28px
    &__header
      margin 0 -15px 15px
      border-radius 0
      height 120px
    &__abstract
      font-size 16px
      line-height 24px

@media (max-width: 1120px)
  html body .items
    &__wrapper
      float none
      width auto
      margin 0
      overflow visible

@media (max-width: 980px)
  html body .items
    &__wrapper
      margin-top -5px
      padding 102px 0 0
