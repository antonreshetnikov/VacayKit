@import "../helpers/*"

.disclaimer
  position absolute
  bottom 56px
  right 0
  left 0
  height 34px
  background-color $some-grey
  padding 11px 50px 11px 70px
  line-height 34px
  z-index 20
  &__wrapper
    font-size 14px
    line-height 17px
    display inline-block
    vertical-align middle


@media (max-width: 900px)
  .disclaimer
    padding 11px 50px

@media (max-width: 740px)
  .disclaimer
    padding 10px
    bottom 86px
    height 52px
    line-height 52px
    &__wrapper
      font-size 11px
      line-height 13px
