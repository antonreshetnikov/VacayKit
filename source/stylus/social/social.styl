@import "../helpers/*"

.social
    float right
    white-space nowrap
    a
        vertical-align middle
        display inline-block
        width 35px
        height 18px
        margin 0 0 0 10px
        padding 17px 0 0
        border-radius 100%
        text-decoration none
        transition background-color .25s
        line-height 0
        text-align center
        &:active
            box-shadow inset 0 2px 0 0 $transparent-black
        &:first-child
            margin 0
        &:before
            icon()
            font-size 21px
            color $white
        &.ln
            background-color #007bb6
            &:before
                content "\e00A"
            &:hover
                background-color #0085c5
            &:active
                background-color #016696
        &.in
            background-color #3f729b
            &:before
                content "\e009"
            &:hover
                background-color #4c8abc
            &:active
                background-color #1c5380
        &.fb
            background-color #3b5fa6
            &:before
                content "\e002"
            &:hover
                background-color #5580d5
            &:active
                background-color #2f5196
        &.tw
            background-color #47a6ed
            &:before
                content "\e005"
            &:hover
                background-color #71bff9
            &:active
                background-color #3692d6
        &.gp
            background-color #d24238
            &:before
                content "\e003"
            &:hover
                background-color #e76158
            &:active
                background-color #bc3027
        &.pi
            background-color #aa262a
            &:before
                content "\e004"
            &:hover
                background-color #c9393d
            &:active
                background-color #991c20
        &.yt
            background-color #e52c28
            &:before
                content "\e007"
            &:hover
                background-color #fa5451
            &:active
                background-color #ce221e

html body .social-likes
    margin 2px 0 24px
    pointer-events all
    white-space nowrap
    min-width 384px
    clearit()
    *
        pointer-events all

    &.social-likes_vertical
        .social-likes__widget
            min-width initial
            margin 0 0 2px


    &_alone
        margin 0 0 30px 30px

    &_mobile
        display none

    &__icon
        left 0
        padding-left 11px
        &_plusone:before
            font-family 'icon'
            content "\e00B"
        &_facebook:before
            font-family 'icon'
            content "\e00E"
        &_twitter:before
            font-family 'icon'
            content "\e00D"
        &_pinterest:before
            font-family 'icon'
            content "\e00C"

    &__widget
        margin 0 11px 0 0
        text-align right
        float left
        border-radius 4px
        min-width 85px
        transition background-color .15s
        &_plusone
            background-color #DE4B3A
            &:hover
                background-color darken(#DE4B3A, 20%)
        &_facebook
            background-color #325a97
            &:hover
                background-color #233f69
        &_twitter
            background-color #00aced
            &:hover
                background-color #0080b0
        &_pinterest
            background-color #cc2127
            &:hover
                background-color #97181d

    &__button
        line-height 35px
        font-size 13px
        font-weight 300
        padding 0 10px 0 40px
        min-width 85px
        -webkit-font-smoothing auto

    &__icon
        left 0
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale

@media (max-width: $laptop)
    html body .social-likes
        margin 0 0 30px

@media (max-width: 940px)
    html>body .social-likes
        display none
        &_both,
        &_mobile
            display block


#social
    width: 100%
    display: block
    margin-top: 50px
    height: 140px


#likearticle h3, #likesite h3
    font-size: 19px
    font-weight: bold
    margin-bottom: 15px

#likearticle
    width:47%
    float:left
    text-align: right

#likesite
    width:47%
    float:right
    text-align: left



.fb-like iframe
    max-width: none!important

@media (max-width: 740px)
    #likearticle h3, #likesite h3
        font-size: 15px
        font-weight: bold
        margin-bottom: 11px
